
<!-- Navigation -->
    <a id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle"><i class="fa fa-bars"></i></a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <a id="menu-close" href="#" class="btn btn-light btn-lg pull-right toggle"><i class="fa fa-times"></i></a>
            <li class="sidebar-brand">
                <%= link_to "Skillo", root_path %>
            </li>
            <li>
                <%= link_to "Home", users_path %>
            </li>
           
            <% if current_user %> 
            
            <li><%= link_to "Profile", current_user %></li>
            <% if !unread_messages %>
                  <li><a href="<%= requests_path%>"><i class="fa fa-envelope-o"></i></a></li>
            <% else %>
                  <li  ><a href="<%= requests_path%>"> <i class="fa fa-envelope-o"> <%= count_messages %></i></a></li>
            <% end %>
           
            
            <li><%= link_to "Edit Skills", new_user_skill_path(user_id) %></li>

