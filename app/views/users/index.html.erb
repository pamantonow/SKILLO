
<div class="categories">
<% @categories.each do |category| %>
	<%= link_to category.name, category, class: "cat" %>
<% end %>
</div>
	<div class="categories">
      <%= form_tag users_path, class: 'search', :method => :get do %>
				<%= text_field_tag :search, params[:search], class: "form-control medium"%>
        	<%= submit_tag "Search Bar", :name => nil, class: "btn btn-default " %>
     
      <% end %>





 

<div class="clear">
	<div class="left">
	<% if @users != nil && @users %>
		<%= render 'map' %>
	<% else %>
		<%= render 'error' %>
	<% end %>
	</div>

