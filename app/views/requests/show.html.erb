<div class= "container">
	<header>
		<div class="row">
			<div class="col-sm-1">
			</div>
			<div class="col-sm-1">
				<img src="<%= @request.sender.avatar %>" class="avatar">
			</div>
			<div class="col-sm-8">
				<div>
					<h2>
					<%= link_to @request.sender.first_name %> wants to learn <%= @request.skill.name %> from <%= link_to @request.receiver.first_name %>
					</h2>
				</div>
				<h4>Requested <%= time_ago_in_words(@request.created_at) %> ago</h4>
			</div>
			<div class="col-sm-1">
				<img src="<%= @request.receiver.avatar %>" class="avatar">
			</div>
			<div class="col-sm-1">
			</div>
		</div>
	</header>
	<main>
		<div class="row">
			<div class="col-sm-3">
			</div>
			<div class="col-sm-6">
				<%= bootstrap_form_for([@request, @message]) do |f| %>
					<div class="col-1">
						<%= f.label :content, "Send a message" %>
						<%= f.text_area :content %>
					</div>
				  <div class="col-submit">
						<%= f.submit "Send Message" %>
					</div>
				<% end %>
			</div>
			<div class="col-sm-3">
			</div>
		</div>
		<% @messages.each do |message| %>
			<div class="row">
				<div class="col-sm-2">
				</div>
				<div class="col-sm-8">
					<div class="boxes">
						<div class="left">
							<img src="<%= message.user.avatar %>" class="avatar">
							<br>
							<%= link_to message.user.first_name, message.user %>
						</div>
						<%= message.content %>
						<br>
						<br>
						<div class="right grey">
							<em><%= time_ago_in_words(message.user.created_at) %></em>
						</div>
					</div>
				</div>
				<div class="col-sm-2">
				</div>
			</div>
		<% end %>
	</main>
</div>

