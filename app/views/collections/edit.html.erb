<h1 class="fancy">Edit your skill: <%= @collection.skill.name %></h1>
<center>
	<%= bootstrap_form_for(@collection) do |f|	%>
		<%= f.text_area :description, label: "Describe your experience:", wrapper: { class: 'col-sm-6 col-sm-offset-3'} %>
		<%= f.number_field :years_of_experience, wrapper: { class: 'col-sm-2 col-sm-offset-5'} %>
		<%= f.number_field :hourly_rate, wrapper: { class: 'col-sm-2 col-sm-offset-5'}, prepend: "$" %>
		<div class="form-group col-sm-2 col-sm-offset-5">
			<%= f.submit "Update skill!" %>
		</div>
	<% end %>
</center>
